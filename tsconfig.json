{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "baseUrl": ".",
    
    "paths": {
      "@/*": ["src/*"] // ✅ مسارات مخصصة للوحدات
    }
  },
  "exclude": ["node_modules"] ,
  "include": ["src/**/*", "spec/**/*"] // أضف مجلد الاختبارات
}
